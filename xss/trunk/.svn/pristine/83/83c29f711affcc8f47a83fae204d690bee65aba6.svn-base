<!DOCTYPE html>
<!-- saved from url=(0044)http://www.zi-han.net/theme/hplus/login.html -->
<html  ng-app="myapp" ng-controller="BaseController">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>洗刷刷 - 登录</title>
    <link rel="shortcut icon" href="/favicon.ico"/>
    <link href="/bootstrap/bootstrap.min.css" rel="stylesheet"/>
    <link href="/font-awesome/font-awesome.min.css" rel="stylesheet"/>

    <link href="/animate/animate.min.css" rel="stylesheet"/>
    <link href="/css/style.min.css" rel="stylesheet"/>
    <!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;ie.html"/>
    <![endif]-->
    <script>if(window.top !== window.self){ window.top.location = window.location;}</script>
</head>

<body class="gray-bg">

<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name">XSS</h1>

        </div>
        <h3>超级洗刷刷</h3>

        <form class="m-t" role="form">
            <div class="form-group">
                <input name="name" type="text" ng-model="query.name" class="form-control" placeholder="用户名" required=""/>
            </div>
            <div class="form-group">
                <input name="password" type="password" ng-model="query.password" class="form-control" placeholder="密码" required=""/>
            </div>
          <!--  <div class="form-group">
                没有账号？<a href="/register.html">注册</a>
            </div>-->
            <button ng-click="onLogin()" class="btn btn-primary block full-width m-b">登 录</button>
            <p class="text-muted text-center"></p>
        </form>
    </div>
</div>
<script src="/jquery/jquery.min.js?v=2.1.4"></script>
<script src="/js/content.min.js?v=1.0.0"></script>
<script type="application/javascript" src="/angular-1.3.9/angular.min.js"></script>
<script src="/sweetalert/sweetalert.min.js"></script>
<script type="text/javascript" src="/jquery-ui/jquery.js"></script>
<script type="application/javascript" src="/jquery-ui/jquery-ui.min.js"></script>
<script type="application/javascript" src="/jquery-ui-multiselect-widget/jquery.multiselect.js"></script>
<script type="application/javascript" src="/jquery-ui-multiselect-widget/jquery.multiselect.filter.js"></script>
<script src="/bootstrap/bootstrap.min.js?v=3.3.6"></script>
<script type="text/javascript" src="/layer/layer.min.js"></script>
<script src="/controllers/common.js"></script>
<script>
    var app = angular.module("myapp", []);
    app.controller("BaseController", ["$scope","$http","$location", function($scope, $http, $location) {
        $scope.query = {name:"", password:"", admin: false }
        $scope.onLogin = function() {
            if(!$scope.query.name||!$scope.query.password)
            {
                return
            }
            $http.get("/login.api", {params:$scope.query})
                    .success(function(data){
                        if (data.status == 0) {
                            location.href= "/";
                        } else {
                            layer.alert("登录失败: 用户名或密码失败");
                        }
                    });
        }
        $scope.register = function() {
            location.href= "/register.html";
        }
    }]);
</script>
</body>
</html>